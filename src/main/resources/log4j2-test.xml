<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level %-15c{1.} %X: %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.schuwalow.todo" level="debug"/>

        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>